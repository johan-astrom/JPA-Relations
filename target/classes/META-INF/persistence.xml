		<class>com.johanastrom.users.User</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost"/>
			<property name="javax.persistence.jdbc.user" value="sa"/>
			<property name="javax.persistence.jdbc.password" value="Snackskal123"/>
			<property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
			<property name = "hibernate.show_sql" value = "true" />
	
      </properties>
	</persistence-unit>
</persistence>
